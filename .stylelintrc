{
	"extends": [
		"stylelint-config-wordpress/scss"
	],
	"rules": {
		"no-descending-specificity": null,
		"function-url-quotes": [
			"always",
			{
				"except": ["empty"]
			}
		],

		"max-line-length": [
			300,
			{
				"ignore": "non-comments",
				"ignorePattern": ["/(https?://[0-9,a-z]*.*)|(^description\\:.+)|(^tags\\:.+)/i"]
			}
		]
	}
}
